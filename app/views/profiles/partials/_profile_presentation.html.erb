<div class="card">
    <div class="card-header">
        <div class="pull-left">
            <strong> A propos</strong>
        </div>
       <div class="pull-right">
            <% if is_me?(@profile.user) %>
                <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i> Modifier'), get_profile_presentation_path(@profile), remote: true %>
            <% end %>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <%= @profile.presentation %>
            </div>
        </div>
    </div>
</div>