$("ul.errors").html("");
<% if @profile.errors.any? %>
  <% @profile.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".profile-informations").html("<%= escape_javascript(render 'profiles/partials/profile_informations') %>");
  $("#user-profile-informations-modal").modal("hide");
 
<% end %>