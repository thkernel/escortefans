<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Photo album</th>
      <th>Aption</th>
      <th>Large source</th>
      <th>Small source</th>
      <th>Medium source</th>
      <th>Link</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.uid %></td>
        <td><%= photo.photo_album %></td>
        <td><%= photo.aption %></td>
        <td><%= photo.large_source %></td>
        <td><%= photo.small_source %></td>
        <td><%= photo.medium_source %></td>
        <td><%= photo.link %></td>
        <td><%= photo.user %></td>
        <td><%= photo.status %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
