<p id="notice"><%= notice %></p>

<h1>User Views</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_views.each do |user_view| %>
      <tr>
        <td><%= user_view.uid %></td>
        <td><%= user_view.user %></td>
        <td><%= link_to 'Show', user_view %></td>
        <td><%= link_to 'Edit', edit_user_view_path(user_view) %></td>
        <td><%= link_to 'Destroy', user_view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

