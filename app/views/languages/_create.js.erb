$("ul.errors").html("");
<% if @language.errors.any? %>
  <% @language.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".language").html("<%= escape_javascript(render 'profiles/partials/language') %>");
  $("#user-profile-language-modal").modal("hide");
 
<% end %>