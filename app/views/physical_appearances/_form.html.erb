<%= form_with(model: physical_appearance, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
        </ul>

    
    <div class="row">
      <div class="col-md">
        <div class="form-group">
          <%= form.label :corpulence, "Corpulance" %>
          <%= form.select :corpulence, CORPULENCES, {prompt: "Sélectionner"}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :height, "Taille (mètre)" %>
          <%= form.number_field :height, class: "form-control", step: "any" %>
        </div>

        <div class="form-group">
          <%= form.label :weight, "Poids (kg)" %>
          <%= form.number_field :weight, class: "form-control", step: "any" %>
        </div>

        <div class="form-group">
          <%= form.label :eye, "Yeux" %>
          <%= form.select :eye, EYE_TYPES, {prompt: "Sélectionner"}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :hair, "Cheveux" %>
          <%= form.select :hair, HAIR_TYPES, {prompt: "Sélectionner"}, class: "form-control" %>
        </div>

      </div>
    </div>

    </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
